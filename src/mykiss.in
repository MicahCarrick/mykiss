#!/usr/bin/env python

import sys
import logging

logging.basicConfig()
sys.path.insert(1, '@pythondir@')

from mykiss.application import Application

if __name__ == "__main__":
    try:
        app = Application(package="@PACKAGE@", 
                          version="@VERSION@",
                          data_dir="@pkgdatadir@",
                          log_level=logging.DEBUG)
    except Exception, e:
        sys.exit("Could not initialize application: %s" % str(e))
    app.run(sys.argv)
